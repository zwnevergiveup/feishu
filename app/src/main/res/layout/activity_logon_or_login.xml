<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/cat1"
        android:id="@+id/choose_login_logon_bg"
        android:transitionName="shared_view_bg"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/main_green"
        android:text="@string/logon"
        android:textColor="@color/pure_white"
        android:textSize="20sp"
        android:id="@+id/choose_logon"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/main_green"
        android:text="@string/login"
        android:textColor="@color/pure_white"
        android:textSize="20sp"
        android:id="@+id/choose_login"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:transitionName="shared_login_btn"
        android:onClick="chooseLogin"
        />

</androidx.constraintlayout.widget.ConstraintLayout>