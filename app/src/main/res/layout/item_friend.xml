<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:id="@+id/item_friend_group_name"
        app:layout_constraintStart_toStartOf="@id/item_friend_iv"
        app:layout_constraintEnd_toEndOf="@id/item_friend_iv"
        app:layout_constraintTop_toTopOf="parent"
        android:text="A"
        android:textColor="@color/pure_black"
        android:gravity="center"
        android:textSize="15sp"
        android:visibility="gone"
        />

    <com.example.qiaoxi.view.customerview.CustomerImgView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_friend_group_name"
        android:src="@mipmap/icon_people10"
        android:id="@+id/item_friend_iv"
        android:scaleType="fitXY"
        app:qxRadius="30"
        />
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toEndOf="@id/item_friend_iv"
        app:layout_constraintTop_toTopOf="@id/item_friend_iv"
        app:layout_constraintBottom_toBottomOf="@id/item_friend_iv"
        android:layout_marginStart="20dp"
        android:id="@+id/item_private_icon"
        android:src="@mipmap/suo_gray"
        android:visibility="gone"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/item_friend_Name"
        app:layout_constraintStart_toEndOf="@id/item_private_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_friend_iv"
        app:layout_constraintBottom_toBottomOf="@id/item_friend_iv"
        android:text="测试"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/pure_black"
        android:textSize="17sp"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/gray_efefef"
        app:layout_constraintTop_toBottomOf="@id/item_friend_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:id="@+id/bottom_gap"
        android:visibility="invisible"
        />


</androidx.constraintlayout.widget.ConstraintLayout>