<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pure_white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.example.qiaoxi.view.customerview.QXToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Robert Hall"
        app:titleTextColor="@color/pure_black"
        app:titleTextMarginStart="15"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/home_toolbar"
        />

    <com.example.qiaoxi.view.customerview.CustomerImgView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_toolbar"
        android:src="@mipmap/icon_people24"
        android:id="@+id/home_icon_iv"
        android:scaleType="fitXY"
        app:qxRadius="40"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:transitionName="contactIcon"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/home_icon_iv"
        app:layout_constraintTop_toTopOf="@id/home_icon_iv"
        android:text="ID: 569128313"
        android:textSize="13sp"
        android:textColor="@color/gray_686868"
        android:layout_marginStart="15dp"
        android:id="@+id/home_id"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/home_icon_iv"
        app:layout_constraintTop_toBottomOf="@id/home_id"
        android:text="Whaterver is worth doing is worth doing well"
        android:textSize="13sp"
        android:textColor="@color/gray_686868"
        android:layout_marginStart="15dp"
        android:id="@+id/home_point"
        android:layout_marginTop="10dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/home_icon_iv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="30dp"
        android:id="@+id/home_recycler"
        android:overScrollMode="never"

        />



</androidx.constraintlayout.widget.ConstraintLayout>