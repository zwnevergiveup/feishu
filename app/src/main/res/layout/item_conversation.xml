<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.example.qiaoxi.view.customerview.CustomerImgView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/ic_launcher_round"
        android:layout_marginStart="20dp"
        android:id="@+id/conversation_icon"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toEndOf="@id/conversation_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/conversation_icon"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:gravity="center_vertical"
        android:text="会话对象"
        android:textColor="@color/pure_black"
        android:textSize="18sp"
        android:id="@+id/conversation_title"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toEndOf="@id/conversation_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/conversation_icon"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:id="@+id/conversation_last"
        android:text="测试：测试内容"
        android:textSize="14sp"
        android:textColor="@color/light_gray"
        android:gravity="center_vertical"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        app:layout_constraintStart_toEndOf="@id/conversation_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/danhui_0"
        />


</androidx.constraintlayout.widget.ConstraintLayout>