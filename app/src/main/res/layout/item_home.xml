<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/pure_white"
    >

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="@id/item_home_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_home_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        android:id="@+id/item_home_iv"
        android:scaleType="fitXY"
        android:src="@mipmap/wallet"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_home_iv"
        app:layout_constraintEnd_toStartOf="@id/item_home_iv2"
        android:id="@+id/item_home_tv"
        android:text="@string/wallet"
        android:textSize="17sp"
        android:textColor="@color/pure_black"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/item_home_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_home_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/item_home_iv2"
        android:scaleType="fitXY"
        android:src="@mipmap/right_arrow"
        android:layout_marginEnd="15dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>