<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name = "viewModel"
            type = "com.example.qiaoxi.dataprocess.CurrentConversationsViewModel"/>

        </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pure_white"
        tools:context=".view.activity.CurrentConversationsActivity">

        <com.example.qiaoxi.view.customerview.QXToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/current_conversation_toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:leftButton_src="@mipmap/back_arrow"
            app:titleTextColor="@color/pure_black"
            app:background_color="@color/background_gray"
            >
        </com.example.qiaoxi.view.customerview.QXToolbar>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/danhui_0"
            android:id="@+id/toolbar_gap"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/current_conversation_toolbar"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/background_gray"
            android:id="@+id/current_conversation_recycler"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/input_group"
            app:layout_constraintTop_toBottomOf="@id/toolbar_gap" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/input_group"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@color/rice_yellow"

            >
            <EditText
                android:id="@+id/current_conversation_send_text"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:textSize="20sp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="30dp"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:text="@={viewModel.editText}"
                android:background="@drawable/message_input_style"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/current_conversation_send_btn"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="10dp"
                />

            <Button
                android:id="@+id/current_conversation_send_btn"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:textAlignment="center"
                android:textColor="@color/pure_white"
                android:background="@drawable/green_r5_btn"
                android:text="@string/send"
                android:textSize="20sp"
                android:layout_marginEnd="20dp"
                android:onClick="@{() -> viewModel.sendMessage()}"
                app:layout_constraintBaseline_toBaselineOf="@id/current_conversation_send_text"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>