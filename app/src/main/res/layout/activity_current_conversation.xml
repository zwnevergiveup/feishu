<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name = "viewModel"
            type = "com.example.qiaoxi.activity.conversation.CurrentConversationsViewModel"/>

        </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.conversation.CurrentConversationsActivity">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/current_conversation_toolbar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:title="@{viewModel.conversationName}"
            android:gravity="center"
            android:background="@color/main_green"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/current_conversation_recycler"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/current_conversation_send_text"
            app:layout_constraintTop_toBottomOf="@id/current_conversation_toolbar" />

        <EditText
            android:id="@+id/current_conversation_send_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/edit_style"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/current_conversation_send_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:text="@string/send"
            android:textSize="20sp"
            android:layout_marginEnd="100dp"
            app:layout_constraintBaseline_toBaselineOf="@id/current_conversation_send_text"
            app:layout_constraintStart_toEndOf="@id/current_conversation_send_text" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>