<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pure_white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.example.qiaoxi.view.customerview.QXToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:leftButton_src="@mipmap/black_arrow1"
        app:titleTextMarginStart="60"
        app:title="二狗"
        app:titleTextColor="@color/pure_black"
        android:id="@+id/contact_detail_toolbar"
        app:rightButton_src="@mipmap/more"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/danhui_0"
        app:layout_constraintTop_toBottomOf="@id/contact_detail_toolbar"
        android:id="@+id/toolbar_gap"
        />
    <com.example.qiaoxi.view.customerview.CustomerImgView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_gap"
        android:src="@mipmap/icon_people24"
        android:id="@+id/contact_detail_friend_iv"
        android:scaleType="fitXY"
        app:qxRadius="40"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="30dp"
        android:transitionName="contactIcon"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/contact_detail_friend_iv"
        app:layout_constraintTop_toTopOf="@id/contact_detail_friend_iv"
        android:text="Name: Pomelo"
        android:textSize="13sp"
        android:textColor="@color/gray_686868"
        android:layout_marginStart="15dp"
        android:id="@+id/contact_detail_name"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/contact_detail_friend_iv"
        app:layout_constraintTop_toBottomOf="@id/contact_detail_name"
        android:text="ID: 569128313"
        android:textSize="13sp"
        android:textColor="@color/gray_686868"
        android:layout_marginStart="15dp"
        android:id="@+id/contact_detail_id"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/contact_detail_friend_iv"
        app:layout_constraintTop_toBottomOf="@id/contact_detail_id"
        android:text="Whaterver is worth doing is worth doing well"
        android:textSize="13sp"
        android:textColor="@color/gray_686868"
        android:layout_marginStart="15dp"
        android:id="@+id/contact_detail_point"
        android:layout_marginTop="10dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/danhui_0"
        app:layout_constraintTop_toBottomOf="@id/contact_detail_point"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/gap2"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gap2"
        android:textColor="@color/pure_black"
        android:textSize="17sp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="区域"
        android:id="@+id/contact_detail_region"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/contact_detail_region"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:textSize="17sp"
        android:textColor="@color/gray_686868"
        android:text="中国"
        app:layout_constraintTop_toBottomOf="@id/gap2"
        app:layout_constraintEnd_toStartOf="@id/contact_detail_region_right"
        />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/contact_detail_region"
        app:layout_constraintBottom_toBottomOf="@id/contact_detail_region"
        android:layout_marginRight="15dp"
        android:src="@mipmap/right_arrow_686868"
        android:id="@+id/contact_detail_region_right"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/danhui_0"
        app:layout_constraintTop_toBottomOf="@id/contact_detail_region"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/gap3"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/gap3"
        android:textColor="@color/pure_black"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        android:textSize="17sp"
        android:text="朋友圈"
        android:id="@+id/contact_detail_moments"
        />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/contact_detail_moments"
        app:layout_constraintBottom_toBottomOf="@id/contact_detail_moments"
        android:layout_marginRight="15dp"
        android:src="@mipmap/right_arrow_686868"
        android:id="@+id/contact_detail_moments_right"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/contact_detail_moments"
        android:layout_marginEnd="15dp"
        android:id="@+id/contact_detail_recy"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/danhui_0"
        app:layout_constraintTop_toBottomOf="@id/contact_detail_recy"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/gap4"
        android:layout_marginTop="15dp"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:textSize="17sp"
        android:textColor="@color/pure_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gap4"
        android:layout_marginTop="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/green_r_all_btn"
        android:transitionName="shared_login_btn"
        android:id="@+id/login"
        android:stateListAnimator="@null"
        />
</androidx.constraintlayout.widget.ConstraintLayout>